<?xml version="1.0" encoding="UTF-8"?>

<component name="MainScene" extends="Scene">
    <script type="text/brightscript" uri="MainScene.brs" />
    <script type="text/brightscript" uri="UILogic/ScreenStackLogic.brs" />
    <script type="text/brightscript" uri="UILogic/ContentTaskLogic.brs" />
    <script type="text/brightscript" uri="UILogic/GridScreenLogic.brs" />
    <script type="text/brightscript" uri="UILogic/VideoPlayerLogic.brs" />
    <children>
         <Overhang
            id="overhang"
            showOptions="false"
            showClock="true"
            logoUri="pkg:/images/hd_overhang_logo.png"
            translation="[0,0]"
        />
        <Label
            id="hostWelcome"
            text="Welcome, Topher"
            width="500"
            translation="[80,170]"
            font="font:LargeBoldSystemFont"
            color="0xebebe9"
        />
        <Label
            id="selectReservation"
            text="to 1075 Treat Ave."
            width="600"
            translation="[80,210]"
            font="font:MediumSystemFont"
            color="0xebebe9"
        />
        <!-- LoadingIndicator should be visible only in case of waiting for content -->
        <Label
            id="loadingIndicator"
            text="Loading..."
            width="1280"
            height="720"
            translation="[0, 0]"
            horizAlign="center"
            vertAlign="center"
            visible="false"
            font="font:MediumBoldSystemFont"
        />
    </children>
</component>
