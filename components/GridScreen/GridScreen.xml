<?xml version="1.0" encoding="UTF-8"?>

<component name="GridScreen" extends="Group"  initialFocus="RowList">
    <script type="text/brightscript" uri="GridScreen.brs" />
	 <interface>
        <!-- Specifies the content for the Grid -->
        <field id="content" type="node" alias="RowList.content" />
        <field id="rowItemSelected" type="intarray" alwaysnotify="true" alias="RowList.rowItemSelected" />
        <field id="jumpToRowItem" type="intarray" alias="RowList.jumpToRowItem" />
    </interface>
    <children>
        <LayoutGroup
            translation="[80,180]" 
            layoutDirection="horiz"
            itemSpacings="[20]">
            <LayoutGroup
                    itemSpacings="[30]">
                <Label
                    id="titleLabel"
                    font="font:LargeSystemFont"
                    color="0xFFA346"
                />
                <Label
                    text="WE HOPE YOU ENJOY YOUR STAY"
                    font="font:LargeSystemFont"
                    color="0xebebe9"
                    height="55"
                />
                <LayoutGroup
                    itemSpacings="[20,0]"
                    layoutDirection="horiz">
                    <Label
                        text="Your Host, Carly"
                        font="font:LargeSystemFont"
                        color="0xebebe9"
                        horizAlign="right"
                        vertAlign="center"
                        wrap="false"
                        height="60"
                        width="650"
                    />
                    <Poster
                        uri="https://supergreeter.co/wp-content/uploads/2023/11/carly-host.png"
                        width="60"
                        height="60"
                    />
                </LayoutGroup>
                <RowList
                    itemComponentName="RowListItemComponent"
                    id="rowList"
                    translation="[80,280]"
                    numRows="2"
                    rowitemSize="[[320,182]]"
                    rowItemSpacing="[[20,0]]"
                    rowHeights="[420,420,420]"
                    itemSize="[700,270]"
                    rowLabelOffset="[[50,20]]"
                    focusXOffset="[70]"
                    showRowLabel="[false]"
                    rowFocusAnimationStyle="floatingfocus"
                />
                </LayoutGroup>
            <Group>
                <!-- Wi-Fi Widget -->
                <LayoutGroup
                    itemSpacings="[20]"
                    layoutDirection="vert"
                    translation="[0,-50]">
                    <Rectangle
                        color="0xebebe9"
                        width="350"
                        height="115">
                        <Label
                            font="font:SmallestSystemFont"
                            text="Wi-Fi"
                            color="0x888888"
                            wrap="true"
                            horizAlign="left"
                            vertAlign="top"
                            translation="[10, 10]"
                            width="180"
                        />    
                        <LayoutGroup
                            itemSpacings="[20]"
                            translation="[40, 10]"
                            layoutDirection="horiz">
                             <Label
                                text="Instant Access:"
                                wrap="false"
                                horizAlign="left"
                                vertAlign="bottom"
                                font="font:SmallSystemFont"
                                color="0x666666"
                                height="60"
                            />
                            <Poster
                                uri="https://supergreeter.co/wp-content/uploads/2023/11/1075-wifi.png"
                                width="95"
                                height="95"
                            />
                        </LayoutGroup>
                    </Rectangle>
                </LayoutGroup>
                <!-- Reservation Details -->
                <LayoutGroup
                    itemSpacings="[20]"
                    layoutDirection="vert"
                    translation="[0,80]">                    
                    <Rectangle
                        color="0xebebe9"
                        width="350"
                        height="120">
                        <Label
                            font="font:SmallestSystemFont"
                            text="Reservation"
                            color="0x888888"
                            wrap="false"
                            horizAlign="left"
                            vertAlign="top"
                            translation="[10, 10]"
                        />
                        <LayoutGroup
                            itemSpacings="[10]"
                            translation="[30, 40]">
                            <Label
                                text="Check-In"
                                width="120"
                                wrap="false"
                                horizAlign="left"
                                font="font:SmallBoldSystemFont"
                                color="0x666666"
                            />
                            <Label
                                id="longDescriptionLabel"
                                width="120"
                                wrap="false"
                                horizAlign="left"
                                color="0x666666"
                                font="font:SmallSystemFont"
                            />
                        </LayoutGroup>
                        <LayoutGroup
                            itemSpacings="[10]"
                            translation="[200, 4]">
                            <Label
                                id="reservationLabel"
                                visible="false"
                            />
                            <Label
                                text="Check-Out"
                                width="120"
                                wrap="false"
                                horizAlign="right"
                                font="font:SmallBoldSystemFont"
                                color="0x666666"
                            />
                            <Label
                                id="shortDescriptionLabel"
                                width="120"
                                wrap="false"
                                horizAlign="right"
                                color="0x666666"
                                font="font:SmallSystemFont"
                            />
                        </LayoutGroup>
                    </Rectangle>
                </LayoutGroup>
                <!-- Welcome Menu -->
                <LayoutGroup
                    itemSpacings="[20]"
                    layoutDirection="vert"
                    translation="[0,220]">                    
                    <Rectangle
                        color="0xebebe9"
                        width="350"
                        height="250">
                        <Label
                            id = "menu"
                            text="Menu"
                            color="0x888888"
                            wrap="false"
                            horizAlign="left"
                            vertAlign="top"
                            translation="[10, 10]"
                        />
                        <Button
                            id="welcomeButton"
                            showFocusFootprint = "true"
                            minWidth = "280"
                            translation="[35, 40]"
                            textColor="0x444444" 
                        />
                        <Button
                            id="homeButton"
                            showFocusFootprint = "true"
                            minWidth = "280"
                            translation="[35, 105]"
                            textColor="0x222222" 
                        />
                        <Button
                            id="localButton"
                            showFocusFootprint = "true"
                            minWidth = "280"
                            translation="[35, 170]"
                            textColor="0x444444" 
                        />
                    </Rectangle>
                </LayoutGroup>
            </Group>
        </LayoutGroup>
    </children>
</component>
