<?xml version="1.0" encoding="UTF-8"?>

<component name="GridScreen" extends="Group"  initialFocus="RowList">
    <script type="text/brightscript" uri="GridScreen.brs" />
	 <interface>
        <!-- Specifies the content for the Grid -->
        <field id="content" type="node" alias="RowList.content" />
        <field id="rowItemSelected" type="intarray" alwaysnotify="true" alias="RowList.rowItemSelected" />
        <field id="jumpToRowItem" type="intarray" alias="RowList.jumpToRowItem" />
    </interface>
    <children>
        <LayoutGroup
            translation="[80,220]" 
            layoutDirection="horiz"
            horizAlignment="left"
            itemSpacings="[40]">
            <LayoutGroup
                    itemSpacings="[40]">
                <Label
                    id="titleLabel"
                    font="font:LargeSystemFont"
                    color="0xFFA346"
                />
                <Label
                    id="welcomeMessage"
                    text="WE HOPE YOU ENJOY YOUR STAY"
                    font="font:LargeSystemFont"
                    color="0xebebe9"
                />
                <RowList
                    itemComponentName="RowListItemComponent"
                    id="rowList"
                    translation="[80,450]"
                    numRows="2"
                    rowitemSize="[[320,182]]"
                    rowItemSpacing="[[20,0]]"
                    rowHeights="[420,420,420]"
                    itemSize="[650,270]"
                    rowLabelOffset="[[50,20]]"
                    focusXOffset="[70]"
                    showRowLabel="[false]"
                    rowFocusAnimationStyle="floatingfocus"
                />
                </LayoutGroup>
            <Group>
                <LayoutGroup
                    itemSpacings="[20]"
                    translation="[0, 0]"
                    layoutDirection="vert">
                    <!-- Reservation Details -->
                    <Rectangle
                        color="0xebebe9"
                        width="360"
                        height="140">
                        <Label
                            font="font:SmallestSystemFont"
                            text="Reservation"
                            color="0x888888"
                            wrap="false"
                            horizAlign="left"
                            vertAlign="top"
                            translation="[10, 10]"
                        />
                        <LayoutGroup
                            itemSpacings="[10]"
                            translation="[30, 50]">
                            <Label
                                id="arrivesLabel"
                                text="Check-In"
                                width="120"
                                wrap="false"
                                horizAlign="center"
                                font="font:SmallBoldSystemFont"
                                color="0x666666"
                            />
                            <Label
                                id="longDescriptionLabel"
                                width="120"
                                wrap="false"
                                horizAlign="center"
                                color="0x666666"
                                font="font:SmallSystemFont"
                            />
                        </LayoutGroup>
                        <LayoutGroup
                            itemSpacings="[10]"
                            translation="[200, 13.5]">
                            <Label
                                id="reservationLabel"
                                visible="false"
                            />
                            <Label
                                id="departsLabel"
                                text="Check-Out"
                                width="120"
                                wrap="false"
                                horizAlign="center"
                                font="font:SmallBoldSystemFont"
                                color="0x666666"
                            />
                            <Label
                                id="shortDescriptionLabel"
                                width="120"
                                wrap="false"
                                horizAlign="center"
                                color="0x666666"
                                font="font:SmallSystemFont"
                            />
                        </LayoutGroup>
                    </Rectangle>
                </LayoutGroup>
                <LabelList
                    id="options"
                    numRows="3"
                    itemSpacing="[0,10]"
                    itemSize="[293, 48]"
                />
            </Group>
        </LayoutGroup>
    </children>
</component>
