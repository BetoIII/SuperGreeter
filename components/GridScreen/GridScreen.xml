<?xml version="1.0" encoding="UTF-8"?>

<component name="GridScreen" extends="Group"  initialFocus="RowList">
    <script type="text/brightscript" uri="GridScreen.brs" />
	 <interface>
        <!-- Specifies the content for the Grid -->
        <field id="content" type="node" alias="RowList.content" />
        <field id="rowItemSelected" type="intarray" alwaysnotify="true" alias="RowList.rowItemSelected" />
        <field id="jumpToRowItem" type="intarray" alias="RowList.jumpToRowItem" />
    </interface>
    <children>
        <LayoutGroup
            translation="[80,180]" 
            layoutDirection="horiz"
            itemSpacings="[20]">
            <LayoutGroup
                    itemSpacings="[30]">
                <Label
                    id="titleLabel"
                    font="font:LargeSystemFont"
                    color="0xFFA346"
                />
                <Label
                    text="WE HOPE YOU ENJOY YOUR STAY"
                    font="font:LargeSystemFont"
                    color="0xebebe9"
                    height="55"
                />
                <LayoutGroup
                    itemSpacings="[20,0]"
                    layoutDirection="horiz">
                    <Label
                        text="Your Host, Carly"
                        font="font:MediumSystemFont"
                        color="0xebebe9"
                        horizAlign="right"
                        vertAlign="center"
                        wrap="false"
                        height="60"
                        width="620"
                    />
                    <Poster
                        uri="https://supergreeter.co/wp-content/uploads/2023/11/carly-host.png"
                        width="60"
                        height="60"
                    />
                </LayoutGroup>
                <RowList
                    itemComponentName="RowListItemComponent"
                    id="rowList"
                    translation="[80,280]"
                    numRows="2"
                    rowitemSize="[[320,182]]"
                    rowItemSpacing="[[20,0]]"
                    rowHeights="[420,420,420]"
                    itemSize="[700,270]"
                    rowLabelOffset="[[50,20]]"
                    focusXOffset="[70]"
                    showRowLabel="[false]"
                    rowFocusAnimationStyle="floatingfocus"
                />
                </LayoutGroup>
            <Group>
                <!-- Wi-Fi Widget -->
                <LayoutGroup
                    layoutDirection="vert"
                    translation="[0,0]">
                    <Label
                        id="wifi"
                        text="Wi-Fi"
                        color="0x888888"
                        wrap="true"
                        horizAlign="left"
                        vertAlign="top"
                        width="180"
                        height="20"
                    />    
                    <Rectangle
                        color="0xebebe9"
                        width="350"
                        height="90">
                        <LayoutGroup
                            itemSpacings="[20]"
                            translation="[40, 0]"
                            layoutDirection="horiz">
                             <Label
                                id="access"
                                text="Instant Access:"
                                wrap="false"
                                horizAlign="left"
                                vertAlign="bottom"
                                color="0x666666"
                                height="55"
                                width="200"
                            />
                            <Poster
                                uri="https://supergreeter.co/wp-content/uploads/2023/11/1075-wifi.png"
                                width="85"
                                height="85"
                            />
                        </LayoutGroup>
                    </Rectangle>
                </LayoutGroup>
                <!-- Reservation Details -->
                <LayoutGroup
                    layoutDirection="vert"
                    translation="[0,135]">                    
                    <Label
                        id="reservation"
                        text="Reservation"
                        color="0x888888"
                        wrap="false"
                        horizAlign="left"
                        vertAlign="top"
                        height="20"
                    />
                    <Rectangle
                        color="0xebebe9"
                        width="350"
                        height="90">
                        <LayoutGroup
                            translation="[30, 10]">
                            <Label
                                id="checkInLabel"
                                text="Check-In"
                                width="120"
                                wrap="false"
                                horizAlign="left"
                                color="0x666666"
                            />
                            <Label
                                id="longDescriptionLabel"
                                width="120"
                                wrap="false"
                                horizAlign="left"
                                color="0x666666"
                                font="font:SmallSystemFont"
                            />
                        </LayoutGroup>
                        <LayoutGroup
                            itemSpacings="[10]"
                            translation="[200, 10]">
                            <Label
                                id="checkOutLabel"
                                text="Check-Out"
                                width="120"
                                wrap="false"
                                horizAlign="right"
                                color="0x666666"
                            />
                            <Label
                                id="shortDescriptionLabel"
                                width="120"
                                wrap="false"
                                horizAlign="right"
                                color="0x666666"
                                font="font:SmallSystemFont"
                            />
                        </LayoutGroup>
                    </Rectangle>
                </LayoutGroup>
                <!-- Welcome Menu -->
                <LayoutGroup
                    layoutDirection="vert"
                    translation="[0,270]">                    
                    <Label
                        id = "menu"
                        text="Menu"
                        color="0x888888"
                        wrap="false"
                        horizAlign="left"
                        vertAlign="top"
                        height="20"
                    />
                    <Rectangle
                        color="0xebebe9"
                        width="350"
                        height="220">                        
                        <Button
                            id="welcomeButton"
                            showFocusFootprint = "true"
                            minWidth = "280"
                            translation="[35, 10]"
                            textColor="0x444444" 
                        />
                        <Button
                            id="homeButton"
                            showFocusFootprint = "true"
                            minWidth = "280"
                            translation="[35, 75]"
                            textColor="0x222222" 
                        />
                        <Button
                            id="localButton"
                            showFocusFootprint = "true"
                            minWidth = "280"
                            translation="[35, 140]"
                            textColor="0x444444" 
                        />
                    </Rectangle>
                    <Label
                        id="reservationLabel"
                        visible="false"
                    />
                </LayoutGroup>
            </Group>
        </LayoutGroup>
    </children>
</component>
